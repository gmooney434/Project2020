@model IEnumerable<Guest>

@{

    ViewBag.Title = "Guest List";
    
}

<div class="card-deck">
        @foreach (var guest in Model)
        {
            var photoPath = "~/Images/" + (guest.PhotoPath ?? "ImageNotAvailableDefault.jpg");
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                 <div class="card-header">
                    <h3>@guest.Forename,@guest.Surname</h3>
                 </div>
                 <img class="card-img top imageThumbnail" src="@photoPath" asp-append-version="true"/>


                 <div class="card-footer text-center">
                     <a asp-controller="home" asp-action="details"
                        asp-route-id="@guest.Id"
                        class="btn btn-primary m-1">View</a>
                     <a asp-controller="home" asp-action="edit"
                        asp-route-id="@guest.Id" class="btn btn-primary m-1">Edit</a>
                 </div>
            </div>
        }
</div>
