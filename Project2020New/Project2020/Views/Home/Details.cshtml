@model HomeDetailsViewModel
@{ 

    ViewBag.Title = "Guest Details";
    var photoPath = "~/Images/"+ (Model.Guest.PhotoPath ?? "ImageNotAvailableDefault.jpg");
}


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Guest.Forename,@Model.Guest.Surname</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>

                <h4>Guest ID : @Model.Guest.Id</h4>
                <h4>DateOfBirth : @Model.Guest.Date_Of_Birth.ToString("dd/MM/yyyy")</h4>



            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" , asp-action="index" class="btn btn-primary">Back</a>
                <a asp-controller="home" asp-action="edit"
                     asp-route-id="@Model.Guest.Id"  class="btn btn-primary m-1">Edit</a>
                <a asp-controller="home", asp-action="Delete" class="btn btn-danger">Delete</a>
                <a asp-controller="/stay", asp-action="Details" class="btn btn-primary">ViewStay</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/CustomScript.js"></script>
    }