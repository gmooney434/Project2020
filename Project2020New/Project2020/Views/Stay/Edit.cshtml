@model StayEditViewModel

@{
    ViewBag.Title = "Edit Stay";

}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="edit" method="post" class="mt-3">
    <div class="form-group row">
        <input hidden asp-for="StayId" />
        <input hidden asp-for="GuestID" />
        <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StartDate" class="form-control" placeholder="Forename" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" placeholder="Surname" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EmergencyContactNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EmergencyContactNumber" class="form-control" placeholder="DateofBirth" />
            <span asp-validation-for="EmergencyContactNumber" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group" row>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
