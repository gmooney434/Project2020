@model Stay

@{
    ViewBag.Title = "Create Stay";
}

<form asp-controller="Stay" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StartDate" class="form-control" placeholder="Forename" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" placeholder="Surname" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>  

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group" row>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
