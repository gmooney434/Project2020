@model StayDetailsViewModel
@{ 
    
    ViewBag.Title = "Stay Details";
}


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1></h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/UU.jpg"  asp-append-version="true"/>

                <h4>Stay ID : @Model.Stay.StayId</h4>
                <h4>StartDate : @Model.Stay.StartDate.ToString("dd/MM/yyyy")</h4>
                <h4>EndDate : @Model.Stay.EndDate</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" , asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
                <a asp-controller="stay", asp-action="Create" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/CustomScript.js"></script>
    }